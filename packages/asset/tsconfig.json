{
  "extends": "@vardast/tsconfig/base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "declaration.d.ts",
    "src/**/*",
    "*.ts",
    "**/*.svg",
    "types",
    "utils",
    "providers",
    "actions",
    "clients",
    "hooks",
    "lib",
    "middlewares",
    "src/queryFns"
  ],
  "exclude": ["node_modules"]
}
