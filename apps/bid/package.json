{
  "name": "bid",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.7.4",
    "npm": "please-use-pnpm"
  },
  "scripts": {
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "create-auth": "if [ -d \"src/app/(authentication)\" ]; then rm -rf \"src/app/(authentication)\"; fi && mkdir src/app/\\(authentication\\) && cp -r ../authentication/src/app/\\(authentication\\)/* src/app/\\(authentication\\)",
    "preinstall": "npx only-allow pnpm",
    "dev-limited": "cross-env NODE_OPTIONS='--max-http-header-size=81920' next dev",
    "dev": "cross-env next dev -p 4001",
    "mac-dev": "pnpm run mac-generate-secret && cross-env next dev",
    "windows-dev": "pnpm run generate-windows-secret && cross-env next dev",
    "generate-windows-secret": "generate-secret.bat",
    "generate-secret": "if grep -q '^NEXTAUTH_SECRET=' .env; then sed -i -e '/^NEXTAUTH_SECRET=/d' .env >> .env; else echo '\n' >> .env; fi && echo NEXTAUTH_SECRET=$(openssl rand -hex 32) >> .env;",
    "mac-generate-secret": "if grep -q '^NEXTAUTH_SECRET=' .env; then sed -i '' '/^NEXTAUTH_SECRET=/d' .env; else echo '\n' >> .env; fi && echo NEXTAUTH_SECRET=$(openssl rand -hex 32) >> .env;",
    "build": "next build",
    "build-prod": "next build",
    "start": "cross-env NODE_OPTIONS='--max-http-header-size=81920' next start -p 4001",
    "ngrok": "ngrok http 3000",
    "analyze": "ANALYZE=true pnpm run build",
    "prettier": "prettier --plugin-search-dir=. src//*.{ts,tsx,css}",
    "prettier:write": "prettier --plugin-search-dir=. src//*.{ts,tsx,css} --write",
    "coupling-graph": "pnpx madge --extensions js,jsx,ts,tsx,css,md,mdx ./ --exclude '.next|tailwind.config.js|reset.d.ts|prettier.config.js|postcss.config.js|playwright.config.ts|next.config.js|next-env.d.ts|instrumentation.ts|e2e/|README.md|.storybook/|.eslintrc.js' --image graph.svg",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "dependencies": {
    "@vardast/auth": "workspace:*",
    "@vardast/hook": "workspace:*",
    "@vardast/util": "workspace:*",
    "@vardast/asset": "workspace:*",
    "@vardast/lib": "workspace:*",
    "@vardast/type": "workspace:*",
    "@vardast/query": "workspace:*",
    "@vardast/ui": "workspace:*",
    "@vardast/component": "workspace:*",
    "@vardast/provider": "workspace:*",
    "@vardast/graphql": "workspace:*",
    "@vardast/tailwind-config": "workspace:*",
    "@vardast/validators": "workspace:*",
    "@vardast/style": "workspace:*",
    "@fullcalendar/core": "^6.1.8",
    "@fullcalendar/daygrid": "^6.1.8",
    "@fullcalendar/react": "^6.1.8",
    "@fullcalendar/timegrid": "^6.1.8",
    "@persian-tools/persian-tools": "^3.5.0",
    "@react-pdf-viewer/core": "3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "axios": "^1.6.2",
    "axios-logger": "^2.7.0",
    "chart.js": "^4.3.3",
    "core": "link: @fullcalendar/core",
    "eslint-config-next": "14.0.4",
    "express": "^4.18.2",
    "libphonenumber-js": "^1.10.41",
    "next-compose-plugins": "^2.2.1",
    "next-pwa": "^5.6.0",
    "nextjs": "^0.0.3",
    "nextjs-toploader": "^1.6.4",
    "pdfjs-dist": "3.4.120",
    "react-chartjs-2": "^5.2.0",
    "react-intersection-observer": "^9.5.3",
    "schema-dts": "^1.1.2",
    "sharp": "^0.32.5",
    "swiper": "^11.0.5",
    "swr": "^2.2.1",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@vardast/eslint-config": "workspace:*",
    "@vardast/middleware": "workspace:*",
    "@vardast/prettier-config": "workspace:*",
    "@vardast/tsconfig": "workspace:*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vardast/eslint-config/base",
      "@vardast/eslint-config/nextjs",
      "@vardast/eslint-config/react"
    ]
  },
  "prettier": "@vardast/prettier-config"
}